{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feat",
  "description": "Schema for character feats.",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "ability": { "type": "string" },
          "value": { "type": "integer" },
          "featId": { "type": "string" }
        },
        "required": ["type"]
      }
    },
    "effects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["bonus", "script"] },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "value": "any",
          "target": "any",
          "condition": "any",
          "script": { "type": "string", "format": "uri-relative" }
        },
        "required": ["type", "name"]
      }
    },
    "script": { "type": "string", "format": "uri-relative" }
  },
  "required": ["name", "description"]
}

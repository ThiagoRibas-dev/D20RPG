{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Map",
  "description": "A game map.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tiles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tileTypes": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "triggers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string"
          },
          "targetMap": {
            "type": "string"
          },
          "targetLocation": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            },
            "required": ["x", "y"]
          }
        },
        "required": ["symbol", "targetMap", "targetLocation"]
      }
    },
    "playerStart": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": ["x", "y"]
    }
  },
  "required": ["name", "description", "tiles", "playerStart"]
}

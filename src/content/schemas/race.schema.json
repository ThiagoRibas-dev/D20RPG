{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Race",
  "description": "Schema for player character races.",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "ability_score_adjustments": {
      "type": "object",
      "properties": {
        "str": { "type": "integer" },
        "dex": { "type": "integer" },
        "con": { "type": "integer" },
        "int": { "type": "integer" },
        "wis": { "type": "integer" },
        "cha": { "type": "integer" }
      },
      "required": ["str", "dex", "con", "int", "wis", "cha"]
    },
    "size": { "type": "string", "enum": ["Small", "Medium", "Large"] },
    "base_speed": { "type": "integer" },
    "darkvision": { "type": "integer" },
    "effects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["bonus", "script", "proficiency", "add_feat_slot"] },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "value": "any",
          "target": "any",
          "condition": "any",
          "script": { "type": "string", "format": "uri-relative" }
        },
        "required": ["type", "name"]
      }
    },
    "automatic_languages": { "type": "array", "items": { "type": "string" } },
    "bonus_languages": { "type": "array", "items": { "type": "string" } },
    "favored_class": { "type": ["string", "null"] },
    "level_adjustment": { "type": "integer" }
  },
  "required": [
    "name",
    "description",
    "ability_score_adjustments",
    "size",
    "base_speed"
  ]
}

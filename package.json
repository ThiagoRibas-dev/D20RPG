{
  "name": "my-rpg-project",
  "version": "1.0.0",
  "description": "A 2D turn-based RPG",
  "main": "dist/scripts/index.js",
  "bin": {
    "my-rpg-project": "dist/index.js"
  },
  "scripts": {
    "build": "pnpm tsc -outDir dist && npx pkg ./src --out-path dist && pnpm run copy-content",
    "build-no-package": "tsc",
    "start": "node dist/scripts/index.js",
    "start-dev": "nodemon --exec ts-node ./scripts/index.ts",
    "copy-content": "node -e \"require('fs').cpSync('./content', './dist/content', {recursive: true});\""
  },
  "pkg": {
    "assets": [
      "dist/resources/**/*"
    ],
    "targets": [
      "node16-win-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "rpg",
    "game",
    "typescript"
  ],
  "author": "ThSiRi",
  "license": "CC BY-NC-SA 4.0",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "nodemon": "^3.1.9",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@npmcli/config": "^10.0.0",
    "@npmcli/redact": "^3.0.0",
    "fs-minipass": "^3.0.3",
    "npm": "^10.4.0",
    "npx": "^10.2.2",
    "proc-log": "^5.0.0"
  },
  "tasks": [
    {
      "label": "npm: start-dev",
      "type": "npm",
      "script": "start-dev",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228"
}